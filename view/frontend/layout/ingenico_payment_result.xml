        <css src="Ingenico_Payment::css/ingenico.css"/>
        <link src="Ingenico_Payment::js/ingenico.js" />
    </head>
    <body>
        <referenceBlock name="global.notices" remove="true"/>
        <referenceBlock name="footer-container" remove="true"/>
